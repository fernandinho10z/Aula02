'''
#METODOS PARA LISTA

lista = ['abacaxi', 'maca', 'pera', 'goiaba']
print (lista)

#adiciona um novo item no final da lista

lista.append ('tomate')
print (lista)

#adiciona um novo item na posição desejada
lista.insert(1, 'jaca')
print (lista)

#remover um item da lista
lista.remove('pera')
print (lista)

#remove o item desejado da lista
lista.pop(2)
print (lista)

#encontra a posicao do objeto
print (lista.index('abacaxi'))

lista.append('abacaxi')
print (lista)

#encontrar quantos objetos existem na lista
print (lista.count('abacaxi'))

#inverter a posicao na lista
lista.reverse()
print (lista)
